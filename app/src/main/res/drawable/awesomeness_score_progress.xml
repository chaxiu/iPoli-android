<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape android:innerRadiusRatio="2.35" android:shape="ring" android:thickness="4dp" android:useLevel="true">
            <solid android:color="@color/md_grey_300"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate android:fromDegrees="270" android:pivotX="50%" android:pivotY="50%" android:toDegrees="270">
            <shape android:innerRadiusRatio="2.35" android:shape="ring" android:thickness="4dp" android:useLevel="true">
                <corners android:radius="4dp"/>
                <solid android:color="?attr/colorAccent"/>
            </shape>
        </rotate>
    </item>
</layer-list>
