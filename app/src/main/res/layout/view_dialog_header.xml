<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorAccent">

    <ImageView
        android:id="@+id/dialogHeaderIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:background="@drawable/transparent_oval_background"
        android:padding="4dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/dialogHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@id/dialogHeaderIcon"
        android:layout_toStartOf="@+id/dialogHeaderLifeCoins"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:textColor="@color/md_white" />

    <TextView
        android:id="@+id/dialogHeaderLifeCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:drawableEnd="@drawable/ic_life_coin_24dp"
        android:drawablePadding="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/md_white"
        android:visibility="gone" />

</RelativeLayout>