<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rpEvery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Every"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/md_dark_text_54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Every" />

    <Spinner
        android:id="@+id/rqFrequency"
        style="@style/Widget.AppCompat.Spinner.DropDown"
        android:background="@drawable/bordered_spinner_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:dropDownWidth="wrap_content"

        android:entries="@array/repeating_quest_frequencies"
        app:layout_constraintBottom_toBottomOf="@+id/rpEvery"
        app:layout_constraintStart_toEndOf="@+id/rpEvery"
        app:layout_constraintTop_toTopOf="@+id/rpEvery" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="x"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/md_dark_text_54"
        app:layout_constraintBottom_toBottomOf="@+id/rpEvery"
        app:layout_constraintStart_toEndOf="@+id/rqFrequency"
        app:layout_constraintTop_toTopOf="@+id/rpEvery"
        tools:text="x" />

    <Spinner
        android:id="@+id/rqCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/rpEvery"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/rpEvery" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="times"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/md_dark_text_54"
        app:layout_constraintBottom_toBottomOf="@+id/rpEvery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/rqCount"
        app:layout_constraintTop_toTopOf="@+id/rpEvery"
        tools:text="times" />

    <Button
        android:id="@+id/button2"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_accent"
        android:text="M"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/md_white"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rpEvery" />

    <Button
        android:id="@+id/button3"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_normal"
        android:text="S"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="?attr/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/rpEvery" />

    <Button
        android:id="@+id/button8"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_normal"
        android:text="S"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="?attr/colorAccent"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/rpEvery" />

    <Button
        android:id="@+id/button7"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_normal"
        android:text="F"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="?attr/colorAccent"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/rpEvery" />

    <Button
        android:id="@+id/button6"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_normal"
        android:text="T"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="?attr/colorAccent"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/rpEvery" />

    <Button
        android:id="@+id/button5"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_normal"
        android:text="W"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="?attr/colorAccent"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/rpEvery" />

    <Button
        android:id="@+id/button4"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_accent"
        android:text="T"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/md_white"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/rpEvery" />
</android.support.constraint.ConstraintLayout>