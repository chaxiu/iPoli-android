<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.GridLayout
        android:id="@+id/storeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:columnCount="2">

        <include
            android:id="@+id/storeMembership"
            layout="@layout/item_store"
            style="@style/StoreItemContainer"
            app:layout_columnWeight="1" />

        <include
            android:id="@+id/storePowerUps"
            layout="@layout/item_store"
            style="@style/StoreItemContainer"
            app:layout_columnWeight="1" />

        <include
            android:id="@+id/storeGems"
            layout="@layout/item_store"
            style="@style/StoreItemContainer"
            app:layout_columnWeight="1"  />

        <include
            android:id="@+id/storePets"
            layout="@layout/item_store"
            style="@style/StoreItemContainer"
            app:layout_columnWeight="1"  />

        <include
            android:id="@+id/storeAvatars"
            layout="@layout/item_store"
            style="@style/StoreItemContainer"
            app:layout_columnWeight="1"  />

        <include
            android:id="@+id/storeColors"
            layout="@layout/item_store"
            style="@style/StoreItemContainer"
            app:layout_columnWeight="1"  />

        <include
            android:id="@+id/storeIcons"
            layout="@layout/item_store"
            style="@style/StoreItemContainer"
            app:layout_columnWeight="1"
            android:layout_marginBottom="16dp"/>

        <include
            android:id="@+id/storeThemes"
            layout="@layout/item_store"
            style="@style/StoreItemContainer"
            app:layout_columnWeight="1"
            android:layout_marginBottom="16dp"/>

    </android.support.v7.widget.GridLayout>
</ScrollView>